<?xml version="1.0" encoding="UTF-8"?>
<local:SampleView xmlns="http://xamarin.com/schemas/2014/forms" 
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
                  xmlns:local="clr-namespace:SampleBrowser.Core;assembly=SampleBrowser.Core" 
                  xmlns:radialMenu="clr-namespace:Syncfusion.SfRadialMenu.XForms;assembly=Syncfusion.SfRadialMenu.XForms" 
                  xmlns:slider="clr-namespace:Syncfusion.SfRangeSlider.XForms;assembly=Syncfusion.SfRangeSlider.XForms" 
                  x:Class="SampleBrowser.SfRadialMenu.GettingStarted_RadialMenu">
  <local:SampleView.Content>
    <Grid BackgroundColor="White">
      <Grid.RowDefinitions>
        <RowDefinition Height="3*" />
        <RowDefinition Height="0.5" />
        <RowDefinition Height="2*" />
      </Grid.RowDefinitions>
      <radialMenu:SfRadialMenu x:Name="radial_Menu" CenterButtonText="" CenterButtonBackText="" CenterButtonFontFamily="Segoe MDL2 Assets.ttf" CenterButtonRadius="32" EnableCenterButtonAnimation="false" CenterButtonBackFontFamily="Segoe MDL2 Assets.ttf" CenterButtonBorderColor="White" CenterButtonBackTapped="Radial_Menu_CenterButtonTapped" Opening="Radial_Menu_Opening" Opened="Radial_Menu_Opened"
          Closing="Radial_Menu_Closing" Closed="Radial_Menu_Closed" Navigating="Radial_Menu_Navigating" Navigated="Radial_Menu_Navigated">
        <radialMenu:SfRadialMenu.Items>
          <radialMenu:SfRadialMenuItem ItemTapped="Handle_ItemTapped" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf">
            <radialMenu:SfRadialMenuItem.Items>
              <radialMenu:SfRadialMenuItem x:Name="Wifi1" ItemTapped="Handle_ItemTapped" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf" />
              <radialMenu:SfRadialMenuItem x:Name="Wifi2" ItemTapped="Handle_ItemTapped" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf" />
              <radialMenu:SfRadialMenuItem x:Name="Wifi3" ItemTapped="Handle_ItemTapped" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf" />
              <radialMenu:SfRadialMenuItem x:Name="Wifi4" ItemTapped="Handle_ItemTapped" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf" />
            </radialMenu:SfRadialMenuItem.Items>
          </radialMenu:SfRadialMenuItem>
          <radialMenu:SfRadialMenuItem ItemTapped="Handle_ItemTapped" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf">
            <radialMenu:SfRadialMenuItem.Items>
              <radialMenu:SfRadialMenuItem ItemTapped="Handle_ItemTapped" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf" />
              <radialMenu:SfRadialMenuItem ItemTapped="Handle_ItemTapped" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf" />
              <radialMenu:SfRadialMenuItem ItemTapped="Handle_ItemTapped" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf" />
              <radialMenu:SfRadialMenuItem ItemTapped="Handle_ItemTapped" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf" />
            </radialMenu:SfRadialMenuItem.Items>
          </radialMenu:SfRadialMenuItem>
          <radialMenu:SfRadialMenuItem ItemTapped="Handle_ItemTapped" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf">
            <radialMenu:SfRadialMenuItem.Items>
              <radialMenu:SfRadialMenuItem ItemTapped="Handle_ItemTapped" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf" />
              <radialMenu:SfRadialMenuItem ItemTapped="Handle_ItemTapped" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf" />
              <radialMenu:SfRadialMenuItem ItemTapped="Handle_ItemTapped" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf" />
            </radialMenu:SfRadialMenuItem.Items>
          </radialMenu:SfRadialMenuItem>
          <radialMenu:SfRadialMenuItem ItemTapped="Handle_ItemTapped" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf">
            <radialMenu:SfRadialMenuItem.Items>
              <radialMenu:SfRadialMenuItem ItemTapped="Handle_ItemTapped" IconFontSize="16" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf" />
              <radialMenu:SfRadialMenuItem ItemTapped="Handle_ItemTapped" IconFontSize="18" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf" />
              <radialMenu:SfRadialMenuItem ItemTapped="Handle_ItemTapped" IconFontSize="20" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf" />
            </radialMenu:SfRadialMenuItem.Items>
          </radialMenu:SfRadialMenuItem>
          <radialMenu:SfRadialMenuItem ItemTapped="Handle_ItemTapped" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf">
            <radialMenu:SfRadialMenuItem.Items>
              <radialMenu:SfRadialMenuItem ItemTapped="Handle_ItemTapped" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf" />
              <radialMenu:SfRadialMenuItem ItemTapped="Handle_ItemTapped" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf" />
              <radialMenu:SfRadialMenuItem ItemTapped="Handle_ItemTapped" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf" />
            </radialMenu:SfRadialMenuItem.Items>
          </radialMenu:SfRadialMenuItem>
          <radialMenu:SfRadialMenuItem FontIconText="" ItemTapped="Handle_ItemTapped" IconFontFamily="Segoe MDL2 Assets.ttf">
            <radialMenu:SfRadialMenuItem.Items>
              <radialMenu:SfRadialMenuItem ItemTapped="Handle_ItemTapped" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf" />
              <radialMenu:SfRadialMenuItem ItemTapped="Handle_ItemTapped" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf" />
              <radialMenu:SfRadialMenuItem ItemTapped="Handle_ItemTapped" FontIconText="" IconFontFamily="Segoe MDL2 Assets.ttf" />
            </radialMenu:SfRadialMenuItem.Items>
          </radialMenu:SfRadialMenuItem>
        </radialMenu:SfRadialMenu.Items>
      </radialMenu:SfRadialMenu>
      <Grid Grid.Row="1" Padding="10,0,10,0">
        <BoxView BackgroundColor="#e5e0e0" />
      </Grid>
      <Grid Grid.Row="2" Padding="10,10,10,10">
        <Grid.RowDefinitions>
          <RowDefinition x:Name="logRow" Height="30" />
          <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Label Text="Event Logs:" x:Name="eventLogsLabel" FontSize="16" YAlign="Center" HorizontalOptions="Start" FontAttributes="Bold" />
        <Button Text="Clear Logs"  x:Name="clearLogsButton"  FontSize="10"  BackgroundColor="White" BorderWidth="1" VerticalOptions="Center" BorderColor="#007aff" TextColor="#007aff" WidthRequest="100" HeightRequest="30" HorizontalOptions="End" Clicked="Handle_Clicked"  />
        <ContentView Grid.Row="1" Padding="3,1,1,3">
          <ContentView VerticalOptions="Fill">
            <ScrollView x:Name="scrollView" IsClippedToBounds="true">
              <StackLayout x:Name="eventLogLayout" Margin="5" />
            </ScrollView>
          </ContentView>
        </ContentView>
      </Grid>
    </Grid>
  </local:SampleView.Content>
  <local:SampleView.PropertyView>
    <StackLayout>
      <ScrollView IsClippedToBounds="true">
        <StackLayout>
          <Label Text="RimRadius" />
          <slider:SfRangeSlider x:Name="slider" ToolTipPlacement="None" HeightRequest="75" SnapsTo="None" ShowRange="false" Orientation="Horizontal" TickPlacement="None" ShowValueLabel="false" Minimum="60" Maximum="100" />
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="auto" />
              <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Text="Enable Dragging" />
            <Switch Grid.Column="1" x:Name="dragSwitch" IsToggled="true" />
            <Label Text="Enable Rotation" Grid.Row="1" Grid.Column="0" />
            <Switch Grid.Column="1" Grid.Row="1" x:Name="rotationSwitch" IsToggled="true" />
          </Grid>
        </StackLayout>
      </ScrollView>
    </StackLayout>
  </local:SampleView.PropertyView>
</local:SampleView>
