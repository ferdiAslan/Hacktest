<?xml version="1.0" encoding="UTF-8" ?>
<local:SampleView
    x:Class="SampleBrowser.SfSchedule.AppointmentEditor"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SampleBrowser.Core;assembly=SampleBrowser.Core"
    xmlns:samplelocal="clr-namespace:SampleBrowser.SfSchedule;assembly=SampleBrowser.SfSchedule"
    xmlns:schedule="clr-namespace:Syncfusion.SfSchedule.XForms;assembly=Syncfusion.SfSchedule.XForms">
    <local:SampleView.Content>
        <Grid x:Name="grid_layout">
          <Grid.Resources>
            <ResourceDictionary>
              <local:ImagePathConverter x:Key="imagePathConverter"/>
            </ResourceDictionary>
          </Grid.Resources>

          <Grid.RowDefinitions>
                <RowDefinition Height="0.1*" />
                <RowDefinition Height="0.9*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" BackgroundColor="#F7F7F7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.1*" />
                    <ColumnDefinition Width="0.7*" />
                    <ColumnDefinition Width="0.2*" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="scheduleView_Button"
                    Grid.Column="0"
                    BackgroundColor="#F7F7F7"
                    HorizontalOptions="Start"
                    Image="{Binding Converter={StaticResource imagePathConverter},ConverterParameter=SampleBrowser.SfSchedule.scheduleview.png}" 
                    VerticalOptions="Center" />
                <Label
                    x:Name="Month_Button"
                    Grid.Column="1"
                    BackgroundColor="#F7F7F7"
                    FontSize="20"
                    HorizontalOptions="Start"
                    TextColor="Black"
                    VerticalOptions="Center" />
                <Button
                    x:Name="Editor_Button"
                    Grid.Column="2"
                    BackgroundColor="#F7F7F7"
                    HorizontalOptions="End"
                    Image="{Binding Converter={StaticResource imagePathConverter},ConverterParameter=SampleBrowser.SfSchedule.editor.png}"
                    VerticalOptions="Center" />
            </Grid>
            <schedule:SfSchedule
                x:Name="Schedule"
                Grid.Row="1"
                Margin="0,-10,0,0"
                DataSource="{Binding ListOfMeeting}"
                HeaderHeight="0"
                HorizontalOptions="FillAndExpand"
                ScheduleView="WeekView"
                ShowAppointmentsInline="True"
                VerticalOptions="FillAndExpand">
                <schedule:SfSchedule.WorkWeekViewSettings>
                    <schedule:WorkWeekViewSettings WorkEndHour="16" WorkStartHour="8" />
                </schedule:SfSchedule.WorkWeekViewSettings>
                <schedule:SfSchedule.AppointmentMapping>
                    <schedule:ScheduleAppointmentMapping
                        ColorMapping="color"
                        EndTimeMapping="To"
                        IsAllDayMapping="IsAllDay"
                        StartTimeMapping="From"
                        SubjectMapping="EventName" />
                </schedule:SfSchedule.AppointmentMapping>
                <schedule:SfSchedule.BindingContext>
                    <samplelocal:AppointmentEditorViewModel />
                </schedule:SfSchedule.BindingContext>


            </schedule:SfSchedule>
            <ListView
                x:Name="scheduleview_list"
                Grid.Row="1"
                BackgroundColor="White"
                BindingContext="{Binding}"
                HasUnevenRows="False"
                HeightRequest="200"
                HorizontalOptions="Start"
                ItemsSource="{Binding ScheduleTypeCollection}"
                RowHeight="45"
                SelectedItem="0"
                SeparatorVisibility="None"
                VerticalOptions="Start"
                WidthRequest="200">
                <ListView.BindingContext>
                    <samplelocal:AppointmentEditorViewModel />
                </ListView.BindingContext>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid Margin="20,10,0,0">
                                    <Label Text="{Binding ScheduleType}" TextColor="Black" />
                                </Grid>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <samplelocal:EditorLayout
                x:Name="editor"
                Grid.RowSpan="2"
                IsVisible="False" />
        </Grid>
    </local:SampleView.Content>

    <local:SampleView.Behaviors>
        <samplelocal:AppointmentEditorBehavior />
    </local:SampleView.Behaviors>
</local:SampleView>
