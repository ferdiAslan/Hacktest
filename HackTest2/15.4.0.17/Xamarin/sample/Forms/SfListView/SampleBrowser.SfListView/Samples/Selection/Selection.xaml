<?xml version="1.0" encoding="utf-8" ?>
<sample:SampleView x:Class="SampleBrowser.SfListView.Selection"
                  xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:local="clr-namespace:SampleBrowser.SfListView;assembly=SampleBrowser.SfListView"
                  xmlns:sample="clr-namespace:SampleBrowser.Core;assembly=SampleBrowser.Core"
                  xmlns:sync="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms">
    <sample:SampleView.Behaviors>
    <local:SfListViewSelectionBehavior/>
  </sample:SampleView.Behaviors>
    <sample:SampleView.Resources>
    <ResourceDictionary>
      <local:SelectionBoolToImageConverter x:Key="BoolToImageConverter"/>
      <local:SelectionModeToVisbileConverter  x:Key="SelectionModeToVisbileConverter"/>
      <DataTemplate x:Name="ItemTemplate"  x:Key="ItemTemplate">
        <Grid x:Name="grid" RowSpacing="0" ColumnSpacing="0">
          <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="1" />
          </Grid.RowDefinitions>
          <Grid RowSpacing="0" ColumnSpacing="0">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="50" />
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Image Source="{Binding SongThumbnail}"
                   HeightRequest="35"
                   WidthRequest="35"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>

            <Grid Grid.Column="1"
                  RowSpacing="1"
                  Padding="10,0,0,0"
                  VerticalOptions="Center">
              <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
              </Grid.RowDefinitions>

              <Label LineBreakMode="NoWrap"
                     TextColor="#474747"
                     Text="{Binding SongTitle}">
                <Label.FontSize>
                  <OnPlatform x:TypeArguments="x:Double">
                    <OnPlatform.WinPhone>
                      <OnIdiom x:TypeArguments="x:Double" 
                               Phone="18" 
                               Tablet="20" 
                               Desktop="20"/>
                    </OnPlatform.WinPhone>
                    <OnPlatform.Android>
                      <OnIdiom x:TypeArguments="x:Double" 
                               Phone="16" 
                               Tablet="18" />
                    </OnPlatform.Android>
                    <OnPlatform.iOS>
                      <OnIdiom x:TypeArguments="x:Double" 
                               Phone="18" 
                               Tablet="20" />
                    </OnPlatform.iOS>
                  </OnPlatform>
                </Label.FontSize>
              </Label>
              <Grid RowSpacing="0"
                    ColumnSpacing="0"
                    Grid.Row="1">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label TextColor="#474747"
                       LineBreakMode="NoWrap"
                       Text="{Binding SongAuther}">
                  <Label.FontSize>
                    <OnPlatform x:TypeArguments="x:Double">
                      <OnPlatform.WinPhone>
                        <OnIdiom x:TypeArguments="x:Double" 
                                 Phone="12" 
                                 Tablet="12" 
                                 Desktop="12"/>
                      </OnPlatform.WinPhone>
                      <OnPlatform.Android>
                        <OnIdiom x:TypeArguments="x:Double"
                                 Phone="10"
                                 Tablet="14" />
                      </OnPlatform.Android>
                      <OnPlatform.iOS>
                        <OnIdiom x:TypeArguments="x:Double"
                                 Phone="12"
                                 Tablet="14" />
                      </OnPlatform.iOS>
                    </OnPlatform>
                  </Label.FontSize>
                </Label>
                <Label TextColor="#474747"
                       Margin="0,0,10,0"
                       Grid.Column="1"
                       LineBreakMode="NoWrap"
                       HorizontalTextAlignment="End"
                       Text="{Binding SongSize}">
                  <Label.FontSize>
                    <OnPlatform x:TypeArguments="x:Double">
                      <OnPlatform.WinPhone>
                        <OnIdiom x:TypeArguments="x:Double" 
                                 Phone="12" 
                                 Tablet="12"
                                 Desktop="12"/>
                      </OnPlatform.WinPhone>
                      <OnPlatform.Android>
                        <OnIdiom x:TypeArguments="x:Double"
                                 Phone="10"
                                 Tablet="14" />
                      </OnPlatform.Android>
                      <OnPlatform.iOS>
                        <OnIdiom x:TypeArguments="x:Double"
                                 Phone="12"
                                 Tablet="14" />
                      </OnPlatform.iOS>
                    </OnPlatform>
                  </Label.FontSize>
                </Label>
              </Grid>
            </Grid>

            <Image Grid.Column="2"
                   x:Name="selectionImage"
                   Margin="10,0,10,0"
                   HeightRequest="28"
                   WidthRequest="28"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   IsVisible="{Binding SelectionMode, Source={x:Reference listView}, Converter={StaticResource SelectionModeToVisbileConverter}}"
                   Source="{Binding Path=IsSelected, Converter={StaticResource BoolToImageConverter}}"/>
          </Grid>
          <StackLayout Grid.Row="1" BackgroundColor="#E4E4E4" HeightRequest="1"/>
        </Grid>
      </DataTemplate>

    </ResourceDictionary>
  </sample:SampleView.Resources>

    <sample:SampleView.Content>
    <Grid Margin="0" RowSpacing="0">
      <Grid.RowDefinitions>
        <RowDefinition Height="50" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <Grid x:Name="headerGrid" BackgroundColor="#FFEEEEF2">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid x:Name="cancelImageParent" IsVisible="{Binding IsVisible}">
          <Image Source="{Binding SelectionCancel}"
              x:Name="selectionCancelImage"
              Grid.Column="0"
              HeightRequest="25"
              WidthRequest="30"
              Margin="10,0,20,0"
              HorizontalOptions="Start"
              VerticalOptions="Center"/>
        </Grid>
        <Label LineBreakMode="NoWrap"
               Margin="15,0,0,0" Text="{Binding TitleInfo}" FontAttributes="Bold"
               FontSize="16" TextColor="Black" HorizontalOptions="Start" VerticalOptions="Center"/>
        <Label LineBreakMode="NoWrap" Grid.Column="0"
               Margin="45,0,0,0" Text="{Binding HeaderInfo}" IsVisible="{Binding IsVisible}"
               FontSize="14" TextColor="Black" HorizontalOptions="Start" VerticalOptions="Center"/>
        <Grid Grid.Column="1" x:Name="editImageParent">
          <Image Source="{Binding SelectionEdit}"
               x:Name="selectionEditImage"
               HeightRequest="40"
               WidthRequest="40"
               Margin="0,0,10,0"
               HorizontalOptions="End"
               VerticalOptions="Center"/>
        </Grid>
      </Grid>
      <sync:SfListView x:Name="listView"
                       Grid.Row="1"
                       SelectionGesture="Tap"
                       SelectionMode="Single"
                       SelectionBackgroundColor="#E4E4E4"
                       ItemTemplate="{StaticResource ItemTemplate}"
                       IsStickyHeader="True" ItemSize="70" ItemsSource="{Binding MusicInfo}">
      </sync:SfListView>
    </Grid>
  </sample:SampleView.Content>
</sample:SampleView>