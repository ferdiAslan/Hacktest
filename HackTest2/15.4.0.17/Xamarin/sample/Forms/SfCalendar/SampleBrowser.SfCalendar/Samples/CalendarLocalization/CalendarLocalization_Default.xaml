<?xml version="1.0" encoding="UTF-8"?>
<local:SampleView xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:local="clr-namespace:SampleBrowser.Core;assembly=SampleBrowser.Core" 
	xmlns:CalendarSample="clr-namespace:Syncfusion.SfCalendar.XForms;assembly=Syncfusion.SfCalendar.XForms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="SampleBrowser.SfCalendar.CalendarLocalization_Default">
	<local:SampleView.Content>

	<StackLayout  x:Name="sampleLayout" >
	<CalendarSample:SfCalendar x:Name="calendar"  VerticalOptions="FillAndExpand" ViewMode="MonthView"/>
	</StackLayout>
	</local:SampleView.Content>
	<local:SampleView.PropertyView>
	<StackLayout x:Name="mainStack">
    <StackLayout Orientation="Vertical">
    <Label x:Name="localeLabel" Text=" Locale" FontAttributes="None" FontSize="20"  HeightRequest = "40"  HorizontalOptions = "Start" TextColor = "Gray" />
    <Picker x:Name="localePicker" SelectedIndex="0"/>
    </StackLayout>

	</StackLayout>
	</local:SampleView.PropertyView>
</local:SampleView>

