<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">
  <FrameLayout
       android:id="@+id/parent"
       android:layout_width="match_parent"
       android:layout_height="50dp">
    <RelativeLayout
        android:id="@+id/toolbarGrid"
        android:background="#E9E9E9"
        android:layout_width="match_parent"
        android:columnCount="5"
        android:layout_height="50dp">
      <Button
        android:id="@+id/undobutton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dip"
        android:background="#E9E9E9"
        android:text="@string/pdfviewer_icon_undo"/> 
      <Button
        android:id="@+id/redobutton"
        android:layout_width="30dp"
        android:layout_height="30dp"      
        android:layout_marginLeft="0dip"
        android:layout_marginRight="00dip"
        android:layout_marginTop="0dip"        
        android:background="#E9E9E9"
        android:text="@string/pdfviewer_icon_redo"/>    
      <Button
        android:id="@+id/selectDocumentButton"
        android:layout_width="30dp"        
        android:layout_height="30dp"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="10dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:background="#E9E9E9"
        android:text="@string/pdfviewer_icon_files"/>      
      <Button
        android:id="@+id/savebutton"
        android:layout_width="30dp"
        android:layout_column="1"
        android:layout_height="30dp"      
        android:layout_marginLeft="75dip"
        android:layout_marginTop="10dip"     
        android:background="#E9E9E9"
        android:text="@string/pdfviewer_icon_save"/>   
      <Button
        android:id="@+id/searchButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#E9E9E9"
        android:text="@string/pdfviewer_icon_search"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="10dip"
        android:layout_gravity="right"/>  
     </RelativeLayout >  
     <GridLayout
        android:id="@+id/searchGrid"
        android:background="#E9E9E9"
        android:layout_width="match_parent"
        android:columnCount="2"
        android:layout_height="50dp">
     <Button
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="#E9E9E9"
        android:text="@string/pdfviewer_icon_back"
        android:layout_marginLeft="1dip"
        android:layout_marginTop="10dip" />
     <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
       <EditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="1dip"
        android:layout_marginTop="15dip"
        android:inputType="text"
        android:imeOptions="actionSearch"
        android:background="@drawable/SearchEntry"
        android:gravity="left" />
      <Button
        android:id="@+id/clearSearchResult"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:text="@string/pdfviewer_icon_cancel"
        android:background="#E9E9E9"
        android:layout_marginTop="0dip"   
        android:layout_marginRight="55dip"
        android:layout_gravity="right|center_vertical" />
      </FrameLayout>   
    </GridLayout>
    </FrameLayout>
   <Syncfusion.SfPdfViewer.Android.SfPdfViewer
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/pdfviewercontrol" />
  
   <FrameLayout
       android:id="@+id/annotationtoolbar"
       android:layout_width="match_parent"
       android:layout_height="50dp">
   <GridLayout
       android:id="@+id/annotationgrid"
       android:background="#E9E9E9"
       android:layout_width="match_parent"
       android:columnCount="3"
       android:layout_height="50dp">
     <Button
       android:id="@+id/highlightbutton"
       android:background="#E9E9E9"
       android:text="@string/pdfviewer_icon_highlight"
       android:layout_width="60dp"
       android:layout_height="30dp"
       android:layout_marginLeft="15dip"
       android:layout_marginTop="10dip"/>
     <Button
      android:id="@+id/underlinebutton"
      android:background="#E9E9E9"
      android:layout_width="60dp"
      android:layout_height="30dp"
      android:text="@string/pdfviewer_icon_underline"
      android:layout_marginLeft="25dip"
      android:layout_marginTop="10dip"/>
     <Button
      android:id="@+id/strikeoutbutton"
      android:background="#E9E9E9"
      android:text="@string/pdfviewer_icon_strikeout"
      android:layout_width="60dp"       
      android:layout_height="30dp"
      android:layout_marginLeft="40dip"
      android:layout_marginTop="10dip"/>
    </GridLayout>
    <GridLayout
      android:id="@+id/annotationbackgrid"
      android:background="#E9E9E9"           
      android:layout_width="match_parent"
      android:columnCount="4"
      android:layout_height="50dp">
      <Button
          android:id="@+id/annotation"
          android:layout_width="40dp"
          android:layout_height="30dp"
          android:background="#E9E9E9"
          android:text="@string/pdfviewer_icon_annotation"
          android:layout_marginLeft="20dip"
          android:layout_marginTop="10dip" />      
       <Button
          android:id="@+id/removebutton"
          android:background="#E9E9E9"
          android:text="@string/pdfviewer_icon_remove"
          android:layout_gravity="right"  
          android:layout_width="60dp"
          android:layout_height="30dp"
          android:layout_marginLeft="20dip"              
          android:layout_marginTop="10dip"/>
      <Button
          android:id="@+id/annotationcolorbutton"
          android:layout_width="30dp"
          android:layout_height="30dp"               
          android:layout_marginLeft="10dip"
          android:layout_marginRight="15dip"
          android:layout_marginTop="10dip" />
      <Button
         android:id="@+id/annotationbackbutton"
         android:layout_width="60dp"
         android:layout_height="30dp"
         android:background="#E9E9E9"
         android:text="@string/pdfviewer_icon_annotationtick"
         android:layout_marginLeft="2dip"
         android:layout_marginTop="10dip" />
      </GridLayout>  
     <GridLayout
         android:id="@+id/selectedannotationcolorchangedGrid"
         android:background="#E9E9E9"           
         android:layout_width="match_parent"
         android:columnCount="6"
         android:layout_height="50dp">
    <Button
          android:id="@+id/cyanbutton"
		      android:layout_gravity="right" 
          android:layout_width="30dp"
          android:layout_height="30dp"    
          android:background="#00FFFF"
          android:layout_marginLeft="15dip"
          android:layout_marginTop="10dip" />
    <Button
          android:id="@+id/greenbutton"
          android:layout_width="30dp"
          android:layout_height="30dp"   
          android:background="#00FF00"
          android:layout_marginLeft="15dip"
          android:layout_marginTop="10dip" />
    <Button
          android:id="@+id/yellowbutton"
          android:layout_width="30dp"
          android:layout_height="30dp"   
          android:background="#FFFF00"
          android:layout_marginLeft="15dip"
          android:layout_marginTop="10dip" />
    <Button
          android:id="@+id/magentabutton"
          android:layout_width="30dp"
          android:layout_height="30dp"   
          android:background="#FF00FF"
          android:layout_marginLeft="15dip"
          android:layout_marginTop="10dip" />
  <Button
          android:id="@+id/whitebutton"
          android:layout_width="30dp"
          android:layout_height="30dp"   
          android:background="#FFFFFF"
          android:layout_marginLeft="15dip"
          android:layout_marginTop="10dip" />
    <Button
          android:id="@+id/blackbutton"
          android:layout_width="30dp"
          android:layout_height="30dp"   
          android:layout_marginRight="15dip"		  
          android:background="#000000"
          android:layout_marginLeft="15dip"
          android:layout_marginTop="10dip" /> 
      </GridLayout>     
  </FrameLayout>
         
  <FrameLayout
       android:id="@+id/bottomtoolbar"
       android:layout_width="match_parent"
       android:layout_height="50dp">
    <GridLayout
     android:id="@+id/bottomtoolbarGrid"
     android:background="#E9E9E9"
     android:layout_width="match_parent"
     android:columnCount="4"
     android:layout_height="50dp">
     <EditText
          android:id="@+id/pagenumberentry"
          android:layout_width="50dp"
          android:layout_height="30dp"
          android:layout_marginLeft="10dip"
          android:layout_marginTop="10dip"
          android:textAlignment="center"
          android:background="@drawable/edittextbg"
          android:textColor="#0076FF"
          android:inputType="number"
          android:selectAllOnFocus="true"
          android:gravity="center"/>
      <TextView
          android:textAlignment="center"
          android:textColor="#0076FF"
          android:layout_marginLeft="10dip"
          android:layout_marginTop="10dip"
          android:textSize="18dp"
          android:text="/"/>
      <TextView
          android:id="@+id/pagecounttext"
          android:layout_width="50dp"
          android:textAlignment="center"
          android:textColor="#0076FF"
          android:layout_marginLeft="10dip"
          android:layout_marginTop="10dip"
          android:textSize="18dp"
          android:gravity="center"
          android:text="0"/>   
     <Button
          android:id="@+id/annotationbutton"
          android:background="#E9E9E9"
          android:text="@string/pdfviewer_icon_annotation"
          android:layout_gravity="right"
          android:layout_width="60dp"
          android:layout_height="30dp"
          android:layout_marginLeft="10dip"
          android:layout_marginRight="7dip"
          android:layout_marginTop="13dip"
                />
    </GridLayout>
  </FrameLayout>
</LinearLayout>