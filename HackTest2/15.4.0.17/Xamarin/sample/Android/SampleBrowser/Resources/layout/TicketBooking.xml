<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:rowCount="2"
    android:columnCount="1">
<!-- <LinearLayout
          
		    android:id="@+id/linearStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"				
            android:orientation="horizontal" >-->
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ticketing System"
        android:textSize="25dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:id="@+id/textview"
        android:layout_weight="5"
        android:layout_gravity="center_horizontal" />
    <LinearLayout
        android:paddingTop="15dp"
        android:paddingBottom="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="30dp"
        android:layout_row="1"
        android:layout_column="0"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/linear"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:background="@drawable/button_border"
            android:orientation="vertical" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="#FFFFFF"
            android:layout_weight="0.4"
            android:id="@+id/linearlayoutMain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:rowCount="3"
                android:columnCount="2">
                <Button
                    android:layout_marginLeft="20dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:id="@+id/button1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:background="#C4C4C4" />
                <TextView
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:background="#ffffff"
                    android:id="@+id/textview1"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal" />
                <Button
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:id="@+id/button2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:background="#62AA5F" />
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selected"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:background="#ffffff"
                    android:id="@+id/textview2"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal" />
                <Button
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:id="@+id/button3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:background="#FFA500" />
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booked"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:background="#ffffff"
                    android:id="@+id/textview3"
                    android:layout_weight="1"
                    android:layout_gravity="start" />
            </GridLayout>
            <Button
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp"
                android:id="@+id/buttonTemp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_weight="10"
                android:gravity="center"
                android:background="#898989" />
            <TextView
                android:layout_marginTop="25dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seats Selected"
                android:textSize="12sp"
                android:textColor="#0041C2"
                android:id="@+id/textview4"
                android:layout_weight="1"
                android:layout_gravity="center" />
            <TextView
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:textSize="25sp"
                android:textColor="#000000"
                android:id="@+id/SelectedLabelCount"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal" />
			<ScrollView 
					
            android:layout_width="wrap_content"
            android:layout_height="80dp"
			android:layout_marginBottom="15dp">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text=""
                android:textSize="15sp"
                android:textColor="#808080"
                android:id="@+id/SelectedLabel"
                android:layout_weight="1"
                android:layout_gravity="center"/>
				</ScrollView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="bottom">
                <Button
                    gravity="bottom"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:id="@+id/ClearSelection"
                    android:layout_width="match_parent"
                    android:text="Clear Selection"
                    android:textColor="#ff0000"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:alpha="0.5"
					android:enabled="false"	
                    android:background="@drawable/ClearSelection_Border"
                    android:onClick="command" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</GridLayout>