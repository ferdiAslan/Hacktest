<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/tab_fill_color"
    android:layout_height="50dp">
	<TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false" 
			android:background="@android:color/transparent" 
              android:layout_marginRight="10sp"
            android:layout_centerVertical="true"
            android:textSize="20sp" android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff" />
   
       
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"  android:orientation="horizontal"
    android:background="@android:color/transparent"
    android:layout_height="50dp">
		<RelativeLayout
        android:clickable="true"
        android:id="@+id/textParent"
        android:layout_width="wrap_content" 
		android:paddingLeft="10dp" android:paddingRight="10dp"
        android:background="@drawable/selection"  
        android:layout_height="match_parent"
        android:gravity="center">
          <TextView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="false" 
			android:background="@android:color/transparent" 
            android:text="Back"
					
            android:layout_centerVertical="true"
            android:textSize="18sp" android:gravity="center_vertical|left"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff" />
		 </RelativeLayout>
		
		</LinearLayout>
	 
   <RelativeLayout
        android:clickable="true"
        android:id="@+id/imageButton"
        android:layout_marginRight="10dp"
        android:layout_width="40dp" 
        android:background="@drawable/selection"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_width="20dp"
            android:clickable="false"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/settings" />
    </RelativeLayout>

</RelativeLayout>